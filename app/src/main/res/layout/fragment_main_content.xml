<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0fff"
    android:orientation="vertical">

    <com.kk.zhbj.ui.fragment.NoScrollViewPager
        android:id="@+id/vp_mainContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </com.kk.zhbj.ui.fragment.NoScrollViewPager>

    <RadioGroup
        android:id="@+id/rg_mainContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#88353434"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/style_content_tab"
            android:checked="true"
            android:drawableTop="@drawable/tab_home_selector"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_newscenter"
            style="@style/style_content_tab"
            android:drawableTop="@drawable/tab_newscenter_selector"
            android:text="新闻中心" />

        <RadioButton
            android:id="@+id/rb_smartservice"
            style="@style/style_content_tab"
            android:drawableTop="@drawable/tab_smartservice_selector"
            android:text="智慧服务" />

        <RadioButton
            android:id="@+id/rb_govaffairs"
            style="@style/style_content_tab"
            android:drawableTop="@drawable/tab_govaffairs_selector"
            android:text="政务" />

        <RadioButton
            android:id="@+id/rb_setting"
            style="@style/style_content_tab"
            android:drawableTop="@drawable/tab_setting_selector"
            android:text="设置" />

    </RadioGroup>
</LinearLayout>
