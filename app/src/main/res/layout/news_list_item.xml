<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_NewsTab_news_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#0f0"
    android:orientation="horizontal"
    android:padding="5dp">

    <ImageView
        android:id="@+id/iv_NewsTab_news_item_icon"
        android:layout_width="55dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@mipmap/news_pic_default" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_NewsTab_news_item_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:maxLines="2"
            android:text="这里防止标题标题标题标题标题标题标题标题标题标题标题标题标" />

        <TextView
            android:id="@+id/tv_NewsTab_news_item_pubDate"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="bottom"
            android:layout_weight="1"
            android:text="2016-09-12 14:34" />
    </LinearLayout>
</LinearLayout>